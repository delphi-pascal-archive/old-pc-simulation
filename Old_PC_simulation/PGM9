005 REM DEBUT
008 GOSUB 600
010 ? TAB(9) "áLA DERNIERE ALLUMETTE"
015 RST = 21
020 CHX = 1
030 MAX = 1
100 GOSUB 900
110 GOSUB 990
115 ? " Voulez-vous commencer? (O/N):";
120 GET R$
125 ? R$
130 IF R$ = "N" GOTO 300
140 GOSUB 990
145 ? SPC(38)
150 GOSUB 990
155 ? "  * Prise maxi:" MAX
160 ? "á  * Combien prenez-vous? ";
165 GET CHX
170 ? CHX
175 IF CHX <= MAX GOTO 190
180 ? "áá       *** TRICHEUR !!!!!"
185 END
190 RST = RST-CHX
195 EF = 21-RST
200 GOSUB 940
205 IF RST > 1 GOTO 250
210 GOSUB 990
215 GOSUB 960
218 GOSUB 990
220 ? "á * Bravo! vous avez gagne"
225 GOTO 590
250 MAX = CHX*2
300 REM Jeu Ordi ---------------------
310 GOSUB 990
315 ? " * A mon tour de jouer..."
320 CHX = MAX
325 CG = RST-1
330 IF CHX >= CG THEN CHX = CG
332 IF CHX = CG GOTO 370
335 OK = 0
340 NT = CHX*2
342 CX = CG-NT
345 IF NT < CX THEN OK = 1
350 IF OK = 1 GOTO 370
355 CHX = CHX-1
360 IF CHX = CG THEN OK = 1
365 IF OK = 0 GOTO 340
370 IF CHX = 0 THEN CHX = 1
372 ? "á * J'en prends " CHX SPC(15)
375 WAIT 20
380 RST = RST-CHX
385 EF = 21-RST
390 GOSUB 940
395 IF RST > 1 GOTO 420
400 ? "á * ...et je gagne!"
410 GOTO 890
420 MAX = CHX*2
425 GOSUB 990
430 GOSUB 960
435 GOTO 150
590 END
