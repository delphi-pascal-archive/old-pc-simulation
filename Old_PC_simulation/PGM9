890 END
900 REM Affiche allumette ------------
901 AL$ = "åìììì"
902 AM$ = "çÿÿÿÿ"
904 T = 9
905 FOR A1 = 1 TO 11
910 ? "Êáááá"
920 FOR A2 = 1 TO 5
925 ? TAB(T) MID$(AL$,A2,1)
926 IF A1 = 11 GOTO 930
927 T1 = T+1
928 ? "Ö" TAB(T1) MID$(AM$,A2,1)
930 NEXT A2
932 T = T+2
935 NEXT A1
936 RETURN 
940 REM Efface allumette -------------
942 T = 9
944 FOR A1 = 1 TO EF
946 ? "Êáááá"
948 FOR A2 = 1 TO 5
950 ? TAB(T) " "
952 NEXT A2
954 T = T+1
956 NEXT A1
958 RETURN 
960 REM Efface lignes --------------
965 FOR N = 1 TO 10
970 ? SPC(38)
975 NEXT N
980 RETURN
990 REM Pose ligne -----------------
991 ? "Ê"
992 FOR N = 1 TO 12
993 ? " "
994 NEXT N
